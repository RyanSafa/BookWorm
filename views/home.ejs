<% layout('boilerplate') -%>
<link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
<div class="navbar">
    <div class="container">
        <a class="logo" href="#">Stock<span>Tracker</span></a>

        <img id="mobile-hamburger" class="mobile-menu" src="assets/menu.svg" alt="Open Navigation">

        <nav>
            <img id="mobile-exit" class="mobile-menu-exit" src="assets/exit.svg" alt="Close Navigation">
            
            <ul class="primary-nav">
                <li class="dashboard"><a class="underline" href="#">Dashboard</a></li>
                <li><a class="underline" href="#">Stocks</a></li>
                <li><a class="underline" href="#">Friends</a></li>
            </ul>

            <ul class="secondary-nav">
                <li ><a class="underline" href="#">Login</a></li>
                <li class="register"><a href="#">Register</a></li>
            </ul>
        </nav>
    </div>
</div>

<script>
    const mobileBtn = document.getElementById('mobile-hamburger')
          nav = document.querySelector('nav')
          mobileBtnExit = document.getElementById('mobile-exit');

    mobileBtn.addEventListener('click', () => {
        nav.classList.add('menu-btn');
    })

    mobileBtnExit.addEventListener('click', () => {
        nav.classList.remove('menu-btn');
    })
</script>