<% layout('boilerplate') -%>
<h1>All Books</h1>
<% for (let  book of books) { %>
    <div class="books">
        <h3>Title: <%= book.title %> </h3>
        <h3>Author: <%= book.author %> </h3>
        <h3>Description: <%= book.description %> </h3>
        <h3>Page Count: <%= book.pageCount %> </h3>
        <h3>Categories: <% for(const category of book.categories) { %> 
            <%=category%>
        <% } %>
        </h3>
        <a href="/books/<%=book._id%>"<button>Go to Book</button></a>
    </div>
<% } %>