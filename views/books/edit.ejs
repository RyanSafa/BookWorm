<% layout('boilerplate') -%>
<link rel="stylesheet" href="../../stylesheets/newBook.css">
 <h1 class="page-title">Edit Book</h1>
  <div class="form-wrapper"> 

    <form class="new-book" method="POST" aaction="/books/<%=book._id%>?_method=PATCH" enctype="multipart/form-data">
        <label for="title" >Title</label>
        <input type="text" name="book[title]" id="title" value="<%=book.title%>">
        <label for="author">Author</label>
        <input type="text" name="book[author]" id="author" value="<%=book.author%>">
        <label for="description">Description</label>
        <textarea name="book[description]" id="description" cols="30" rows="10"><%=book.description%></textarea>
        <input name="image" id="image" type="file">
        <label for="pageCount">Page Count</label>
        <input type="number" name="book[pageCount]" id="pageCount" value="<%=book.pageCount%>">
        <label for="categories">Categories</label>
        <input type="text" name="book[categories]" id="categories">
        <button type="submit">Submit</button>
    </form>
</div>



